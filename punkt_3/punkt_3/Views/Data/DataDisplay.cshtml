<h1>Таблица Авторов</h1>
<table border="1" style="background-color: gold; width: auto; border-collapse: collapse;">
    <thead>
        <tr>
            <th style="padding: 5px; border: 1px solid black; text-align: center;">Идентификатор</th>
            <th style="padding: 5px; border: 1px solid black; text-align: center;">Фамилия</th>
            <th style="padding: 5px; border: 1px solid black; text-align: center;">Имя</th>
            <th style="padding: 5px; border: 1px solid black; text-align: center;">Телефон</th>
            <th style="padding: 5px; border: 1px solid black; text-align: center;">Зарплата</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td style="padding: 5px; border: 1px solid black; text-align: center;">@author.Au_id</td>
                <td style="padding: 5px; border: 1px solid black; text-align: left;">@author.Au_lname</td>
                <td style="padding: 5px; border: 1px solid black; text-align: left;">@author.Au_fname</td>
                <td style="padding: 5px; border: 1px solid black; text-align: center;">@author.Au_phone</td>
                <td style="padding: 5px; border: 1px solid black; text-align: right;">@string.Format("{0:F1}", author.Au_salary)</td>
            </tr>
        }
    </tbody>
</table>

<style>
    body {
            color: blue;
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: lightgray;
        }

        table {
            background-color: gold;
            width: auto;
            border-collapse: collapse;
            margin: 0 auto;
            border: double;
        }

        th, td {
            padding: 5px;
            border: 1px solid black;
        }

        th {
            text-align: center;
        }

        td:nth-child(5) {
            text-align: right;
        }
</style>